{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      //"Microsoft": "Warning",
      //"Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "routeAuth": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "routeEmployee": {
        "ClusterId": "employeeCluster",
        "Match": {
          "Path": "/employee/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7262/"
          }
        }
      },
      "employeeCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7182"
          }
        }
      }
    }
  }
}